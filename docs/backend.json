{
  "entities": {
    "User": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address"
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name"
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture"
        },
        "companyId": {
          "type": "string",
          "description": "The ID of the company associated with the user"
        }
      },
      "required": ["uid", "email"]
    },
    "Company": {
      "title": "Company",
      "description": "A company registered on the platform",
      "type": "object",
      "properties": {
        "ownerUid": {
          "type": "string",
          "description": "The UID of the user who owns the company"
        },
        "companyName": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "subdomain": {
          "type": "string"
        },
        "capacity": {
          "type": "number"
        },
        "employees": {
          "type": "number"
        },
        "yearlyOutput": {
          "type": "number"
        },
        "complianceLevel": {
          "type": "string",
          "enum": ["basic", "intermediate", "certified"]
        }
      },
      "required": ["ownerUid", "companyName", "location", "subdomain"]
    },
    "CompanyData": {
      "title": "Company Data",
      "description": "Stores periodic data submissions for a company.",
      "type": "object",
      "properties": {
        "companyId": {
          "type": "string"
        },
        "subdomain": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "data": {
          "type": "object"
        }
      },
      "required": ["companyId", "subdomain", "createdAt", "data"]
    }
  },
  "auth": {
    "providers": ["email-password", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/companies/{companyId}": {
      "schema": {
        "$ref": "#/entities/Company"
      },
      "description": "Stores company profile information."
    },
    "/companies/{companyId}/data/{dataId}": {
      "schema": {
        "$ref": "#/entities/CompanyData"
      },
      "description": "Stores periodic data submissions for a company."
    }
  }
}
